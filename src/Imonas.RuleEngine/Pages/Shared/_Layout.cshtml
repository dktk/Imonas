<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Imonas Rule Engine</title>
  <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/darkly/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-body">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand fw-semibold" asp-page="/Index">Imonas.RuleEngine</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarsExample">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" asp-page="/RuleGroups/Index">Rule Groups</a></li>
          <li class="nav-item"><a class="nav-link" asp-page="/RuleGroups/Create">Create</a></li>
          <li class="nav-item"><a class="nav-link" asp-page="/Evaluate/Index">Evaluate</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <main class="container">
    @RenderBody()
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
 
</body>
</html>
