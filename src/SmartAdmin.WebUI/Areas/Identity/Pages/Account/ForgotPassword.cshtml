@page
@inject Microsoft.Extensions.Localization.IStringLocalizer<ForgotPasswordModel> _localizer
@model ForgotPasswordModel
@{
    ViewData["PageName"] = "forgotpassword";
    ViewData["Title"] = _localizer["Forgot password"].Value;
}

@section Header {
    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
    <style>
        .forgot-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            border: none;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2), 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .forgot-header {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
            padding: 2rem 1.5rem;
            border-radius: 0.5rem 0.5rem 0 0;
        }
        .forgot-header h4 {
            margin-bottom: 0;
        }
        .form-control-modern {
            border: 2px solid #e9ecef;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s ease;
        }
        .form-control-modern:focus {
            border-color: #f5576c;
            box-shadow: 0 0 0 0.2rem rgba(245, 87, 108, 0.15);
        }
        .input-group-modern {
            position: relative;
        }
        .input-group-modern .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #adb5bd;
            z-index: 10;
        }
        .input-group-modern .form-control-modern {
            padding-left: 2.75rem;
        }
        .btn-recover {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.875rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        .btn-recover:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(245, 87, 108, 0.4);
        }
        .btn-back {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: white;
            color: white;
        }
        .info-box {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border-left: 4px solid #667eea;
            border-radius: 0 0.5rem 0.5rem 0;
            padding: 1rem;
        }
        .step-indicator {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
        }
        .step-number {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.875rem;
            margin-right: 0.75rem;
            flex-shrink: 0;
        }
        .heading-section h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .heading-section .subtitle {
            font-size: 1.125rem;
            opacity: 0.9;
        }
    </style>
}

@section PageHeading {
    <div class="col-xl-12 text-center mb-4">
        <div class="heading-section text-white">
            <i class="fal fa-key fa-3x mb-3 opacity-80"></i>
            <h2>@_localizer["Forgot Your Password?"]</h2>
            <p class="subtitle">@_localizer["No worries! It happens to the best of us."]</p>
        </div>
    </div>
}

<div class="col-xl-5 col-lg-6 col-md-8 ml-auto mr-auto">
    <div class="card forgot-card rounded-plus">
        <div class="forgot-header text-center text-white">
            <i class="fal fa-envelope fa-2x mb-2 opacity-80"></i>
            <h4 class="fw-500">@_localizer["Reset Password"]</h4>
            <p class="mb-0 opacity-80 fs-sm">@_localizer["Enter your email to receive reset instructions"]</p>
        </div>
        <div class="card-body p-4">
            <form id="js-forgot" method="post" class="needs-validation" novalidate>
                <div class="form-group mb-4">
                    <label class="form-label fw-500" asp-for="Input.Email">@_localizer["Email Address"]</label>
                    <div class="input-group-modern">
                        <i class="fal fa-envelope input-icon"></i>
                        <input type="email" asp-for="Input.Email" class="form-control form-control-modern" placeholder="@_localizer["Enter your email address"]" required autocomplete="email" />
                    </div>
                    <span class="text-danger fs-sm" asp-validation-for="Input.Email"></span>
                </div>

                <div class="info-box mb-4">
                    <p class="fw-500 mb-2 text-dark"><i class="fal fa-info-circle mr-1"></i> @_localizer["How it works"]:</p>
                    <div class="step-indicator">
                        <span class="step-number">1</span>
                        <span class="fs-sm text-muted">@_localizer["Enter your registered email address"]</span>
                    </div>
                    <div class="step-indicator">
                        <span class="step-number">2</span>
                        <span class="fs-sm text-muted">@_localizer["Check your inbox for the reset link"]</span>
                    </div>
                    <div class="step-indicator mb-0">
                        <span class="step-number">3</span>
                        <span class="fs-sm text-muted">@_localizer["Create a new secure password"]</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-area="Identity" asp-page="/Account/Login" class="text-muted fw-500">
                        <i class="fal fa-arrow-left mr-1"></i> @_localizer["Back to Login"]
                    </a>
                    <button id="js-forgot-btn" type="submit" class="btn btn-recover text-white">
                        <i class="fal fa-paper-plane mr-2"></i>@_localizer["Send Reset Link"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <p class="text-white opacity-70 fs-sm mb-0">
            @_localizer["Remember your password?"]
            <a asp-area="Identity" asp-page="/Account/Login" class="text-white fw-500 ml-1">@_localizer["Sign in here"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            // Form validation
            var form = document.getElementById('js-forgot');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);

            // Auto-focus on email field
            $('input[name="Input.Email"]').focus();
        });
    </script>
}
