@page
@using Microsoft.AspNetCore.Mvc.Localization
@model SmartAdmin.WebUI.Pages.Config.FieldMappingsModel
@inject IStringLocalizer<FieldMappingsModel> _localizer

@{
    ViewData["Title"] = "Field Mappings";
    ViewData["PageName"] = "config_fieldmappings";

    var activeCount = Model.Mappings.Count(m => m.IsActive);
    var inactiveCount = Model.Mappings.Count(m => !m.IsActive);
    var withTransformCount = Model.Mappings.Count(m => !string.IsNullOrEmpty(m.TransformExpression));
    var directCount = Model.Mappings.Count(m => string.IsNullOrEmpty(m.TransformExpression));
    var pspGroups = Model.Mappings.GroupBy(m => m.PspName).Select(g => new { Name = g.Key, Count = g.Count() }).ToList();
}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="subheader-title">
                <i class="subheader-icon @(Settings.Theme.IconPrefix) fa-columns"></i> @_localizer["Field Mappings"]
            </h1>
            <small class="text-muted">@_localizer["Configure source to target field transformations"]</small>
        </div>
        <div>
            <a asp-page="/Config/FieldMappings/Create" class="btn btn-success waves-effect waves-themed">
                <i class="@(Settings.Theme.IconPrefix) fa-plus mr-1"></i>
                @_localizer["Add Mapping"]
            </a>
            <a asp-page="Index" class="btn btn-secondary waves-effect waves-themed">
                <i class="@(Settings.Theme.IconPrefix) fa-arrow-left mr-1"></i>
                @_localizer["Back"]
            </a>
        </div>
    </div>
</div>

<div class="alert alert-info border-0 mb-4">
    <i class="@(Settings.Theme.IconPrefix) fa-info-circle mr-2"></i>
    @_localizer["Field mappings define how PSP/bank file fields are transformed and mapped to the canonical schema. Versioning allows you to rollback mappings if needed."]
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="card border mb-0">
            <div class="card-body py-2">
                <form method="get" class="d-flex align-items-center">
                    <label class="mr-2 mb-0 font-weight-bold" style="width:170px;">
                        <i class="@(Settings.Theme.IconPrefix) fa-filter mr-1"></i>
                        @_localizer["Filter by PSP:"]
                    </label>
                    <select name="SelectedPspId" class="form-control select2" style="width:320px;"  onchange="this.form.submit()">
                        <option value="">@_localizer["All PSPs"]</option>
                        @foreach (var psp in Model.AvailablePsps)
                        {
                            <option value="@psp.Id" selected="@(Model.SelectedPspId == psp.Id)">@psp.Name (@psp.Code)</option>
                        }
                    </select>
                    @if (Model.SelectedPspId.HasValue)
                    {
                        <a asp-page="/Config/FieldMappings" class="btn btn-sm btn-outline-secondary ml-2">
                            <i class="@(Settings.Theme.IconPrefix) fa-times mr-1"></i>
                            @_localizer["Clear"]
                        </a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="@(Settings.Theme.IconPrefix) fa-check-circle mr-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-success-300 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @activeCount
                    <small class="m-0 l-h-n">@_localizer["Active Mappings"]</small>
                </h3>
            </div>
            <i class="@(Settings.Theme.IconPrefix) fa-check-circle position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-secondary-500 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @inactiveCount
                    <small class="m-0 l-h-n">@_localizer["Inactive Mappings"]</small>
                </h3>
            </div>
            <i class="@(Settings.Theme.IconPrefix) fa-pause-circle position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-info-400 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @withTransformCount
                    <small class="m-0 l-h-n">@_localizer["With Transform"]</small>
                </h3>
            </div>
            <i class="@(Settings.Theme.IconPrefix) fa-code position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-primary-400 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @directCount
                    <small class="m-0 l-h-n">@_localizer["Direct Mappings"]</small>
                </h3>
            </div>
            <i class="@(Settings.Theme.IconPrefix) fa-arrow-right position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div id="panel-mappings" class="panel">
            <div class="panel-hdr">
                <h2>
                    @_localizer["Field Mappings"]
                    <span class="fw-300"><i>(@Model.Mappings.Count() @_localizer["total"])</i></span>
                </h2>
                <div class="panel-toolbar">
                    @if (Model.SelectedPspId.HasValue)
                    {
                        var selectedPsp = Model.AvailablePsps.FirstOrDefault(p => p.Id == Model.SelectedPspId);
                        <span class="badge badge-primary">
                            <i class="@(Settings.Theme.IconPrefix) fa-filter mr-1"></i>
                            @_localizer["Filtered by"]: @(selectedPsp?.Name ?? "Unknown")
                        </span>
                    }
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped w-100">
                            <thead class="bg-success-600">
                                <tr>
                                    <th>@_localizer["PSP"]</th>
                                    <th>@_localizer["Source Field"]</th>
                                    <th class="text-center" style="width:40px;"></th>
                                    <th>@_localizer["Target Field"]</th>
                                    <th>@_localizer["Transform"]</th>
                                    <th>@_localizer["Version"]</th>
                                    <th>@_localizer["Effective From"]</th>
                                    <th>@_localizer["Effective To"]</th>
                                    <th class="text-center">@_localizer["Active"]</th>
                                    <th class="text-center">@_localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mapping in Model.Mappings)
                                {
                                    <tr>
                                        <td><span class="badge badge-secondary">@mapping.PspName</span></td>
                                        <td><code>@mapping.SourceField</code></td>
                                        <td class="text-center text-muted"><i class="@(Settings.Theme.IconPrefix) fa-arrow-right"></i></td>
                                        <td><code>@mapping.TargetField</code></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(mapping.TransformExpression))
                                            {
                                                <span class="badge badge-info" data-toggle="tooltip" title="@mapping.TransformExpression">
                                                    <i class="@(Settings.Theme.IconPrefix) fa-code mr-1"></i>@_localizer["Transform"]
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@_localizer["Direct"]</span>
                                            }
                                        </td>
                                        <td>@mapping.Version</td>
                                        <td>@mapping.EffectiveFrom.ToString("yyyy-MM-dd")</td>
                                        <td>@(mapping.EffectiveTo?.ToString("yyyy-MM-dd") ?? "-")</td>
                                        <td class="text-center">
                                            @if (mapping.IsActive)
                                            {
                                                <span class="badge badge-success">@_localizer["Active"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@_localizer["Inactive"]</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-outline-success waves-effect waves-themed" title="@_localizer["Edit"]">
                                                <i class="@(Settings.Theme.IconPrefix) fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Mappings.Any())
                                {
                                    <tr>
                                        <td colspan="10" class="text-center text-muted py-4">
                                            <i class="@(Settings.Theme.IconPrefix) fa-inbox fa-3x mb-3 d-block"></i>
                                            @_localizer["No field mappings found."]
                                            <div class="mt-2">
                                                <a asp-page="/Config/FieldMappings/Create" class="btn btn-success btn-sm">
                                                    <i class="@(Settings.Theme.IconPrefix) fa-plus mr-1"></i>
                                                    @_localizer["Add your first mapping"]
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock {
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
