@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Domain.Enums
@model SmartAdmin.WebUI.Pages.Cases.CreateModel
@inject IStringLocalizer<CreateModel> _localizer

@{
    ViewData["Title"] = "Create Case";
    ViewData["PageName"] = "cases_create";
}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="subheader-title">
                <i class="subheader-icon @(Settings.Theme.IconPrefix) fa-plus-circle"></i> @_localizer["Create Exception Case"]
            </h1>
            <small class="text-muted">@_localizer["Document and track reconciliation exceptions"]</small>
        </div>
        <a asp-page="Index" class="btn btn-secondary waves-effect waves-themed">
            <i class="@(Settings.Theme.IconPrefix) fa-arrow-left mr-1"></i>
            @_localizer["Back"]
        </a>
    </div>
</div>

<div class="alert alert-info border-0 mb-4">
    <i class="@(Settings.Theme.IconPrefix) fa-info-circle mr-2"></i>
    @_localizer["Create a new exception case to track and manage reconciliation variances or issues."]
</div>

<form method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xl-12">
            <div id="panel-details" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-edit mr-2"></i>
                        @_localizer["Case Details"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label class="form-label" asp-for="Input.Title">@_localizer["Case Title"] <span class="text-danger">*</span></label>
                                <input asp-for="Input.Title" class="form-control" placeholder="@_localizer["Brief description of the issue"]" />
                                <span asp-validation-for="Input.Title" class="invalid-feedback"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">@_localizer["Case Number"]</label>
                                <input type="text" class="form-control" value="@Model.GeneratedCaseNumber" readonly style="background-color: #f8f9fa;" />
                                <small class="form-text text-muted">@_localizer["Auto-generated"]</small>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-12 mb-3">
                                <label class="form-label" asp-for="Input.Description">@_localizer["Description"] <span class="text-danger">*</span></label>
                                <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="@_localizer["Detailed description of the variance or issue..."]"></textarea>
                                <span asp-validation-for="Input.Description" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Input.Severity">@_localizer["Severity"] <span class="text-danger">*</span></label>
                                <select asp-for="Input.Severity" class="form-control select2">
                                    <option value="@CaseSeverity.Low">@_localizer["Low"]</option>
                                    <option value="@CaseSeverity.Medium" selected>@_localizer["Medium"]</option>
                                    <option value="@CaseSeverity.High">@_localizer["High"]</option>
                                    <option value="@CaseSeverity.Critical">@_localizer["Critical"]</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Input.VarianceType">@_localizer["Variance Type"] <span class="text-danger">*</span></label>
                                <select asp-for="Input.VarianceType" class="form-control select2">
                                    <option value="@VarianceType.Amount">@_localizer["Amount"]</option>
                                    <option value="@VarianceType.Date">@_localizer["Date"]</option>
                                    <option value="@VarianceType.Currency">@_localizer["Currency"]</option>
                                    <option value="@VarianceType.BankFee">@_localizer["Bank Fee"]</option>
                                    <option value="@VarianceType.Other">@_localizer["Other"]</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label" asp-for="Input.VarianceAmount">@_localizer["Variance Amount"]</label>
                                <input asp-for="Input.VarianceAmount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.AssignedTo">@_localizer["Assign To"]</label>
                                <select asp-for="Input.AssignedTo" class="form-control select2">
                                    <option value="">-- @_localizer["Unassigned"] --</option>
                                    <option value="admin">Admin</option>
                                    <option value="analyst">Analyst</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.DueDate">@_localizer["Due Date"]</label>
                                <input asp-for="Input.DueDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.LinkedTransactionId">@_localizer["Linked Transaction ID"]</label>
                                <input asp-for="Input.LinkedTransactionId" type="text" class="form-control" placeholder="@_localizer["Transaction ID"]" />
                                <small class="form-text text-muted">@_localizer["Link this case to a specific transaction"]</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.RootCauseCode">@_localizer["Root Cause Code"]</label>
                                <select asp-for="Input.RootCauseCode" class="form-control select2">
                                    <option value="">-- @_localizer["Select Root Cause"] --</option>
                                    <option value="PSP_DELAY">@_localizer["PSP Processing Delay"]</option>
                                    <option value="BANK_FEE">@_localizer["Unexpected Bank Fee"]</option>
                                    <option value="FX_VARIANCE">@_localizer["FX Rate Variance"]</option>
                                    <option value="DATA_QUALITY">@_localizer["Data Quality Issue"]</option>
                                    <option value="MISSING_TXN">@_localizer["Missing Transaction"]</option>
                                    <option value="DUPLICATE">@_localizer["Duplicate Transaction"]</option>
                                    <option value="OTHER">@_localizer["Other"]</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-12 mb-3">
                                <label class="form-label" asp-for="Input.InitialNotes">@_localizer["Initial Notes"]</label>
                                <textarea asp-for="Input.InitialNotes" class="form-control" rows="3" placeholder="@_localizer["Any initial observations or investigation notes..."]"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="@(Settings.Theme.IconPrefix) fa-exclamation-triangle mr-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="btn-group float-right" role="group">
                <button type="submit" class="btn btn-primary waves-effect waves-themed">
                    <i class="@(Settings.Theme.IconPrefix) fa-check mr-1"></i>
                    @_localizer["Create Case"]
                </button>
                <a asp-page="Index" class="btn btn-secondary waves-effect waves-themed">
                    <i class="@(Settings.Theme.IconPrefix) fa-times mr-1"></i>
                    @_localizer["Cancel"]
                </a>
            </div>
        </div>
    </div>
</form>

@section ScriptsBlock {
    <partial name="_ValidationScriptsPartial" />
}
