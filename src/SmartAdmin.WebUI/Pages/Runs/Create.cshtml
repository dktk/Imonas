@page
@using Microsoft.AspNetCore.Mvc.Localization
@model SmartAdmin.WebUI.Pages.Runs.CreateModel
@inject IStringLocalizer<CreateModel> _localizer

@{
    ViewData["Title"] = "Start New Run";
    ViewData["PageName"] = "runs_create";
    var simulateUrl = Url.Page("/Runs/Create", "Simulate");
}

@section HeadBlock {
    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="subheader-title">
                <i class="subheader-icon @(Settings.Theme.IconPrefix) fa-rocket"></i> @_localizer["Start New Reconciliation Run"]
            </h1>
            <small class="text-muted">@_localizer["Configure and launch a new reconciliation process"]</small>
        </div>
        <a asp-page="Index" class="btn btn-secondary waves-effect waves-themed">
            <i class="@(Settings.Theme.IconPrefix) fa-arrow-left mr-1"></i>
            @_localizer["Back"]
        </a>
    </div>
</div>

<div class="alert alert-info border-0 mb-4">
    <i class="@(Settings.Theme.IconPrefix) fa-info-circle mr-2"></i>
    @_localizer["Configure your reconciliation parameters below and click 'Start Run' to begin the matching process. The run will process transactions according to your configured matching rules."]
</div>

<form method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xl-12">
            <div id="panel-config" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-cog mr-2"></i>
                        @_localizer["Run Configuration"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.RunName">@_localizer["Run Name"] <span class="text-danger">*</span></label>
                                <input asp-for="Input.RunName" class="form-control" placeholder="@_localizer["e.g., Daily Recon - 2026-01-20"]" />
                                <span asp-validation-for="Input.RunName" class="invalid-feedback"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.RulePackVersion">@_localizer["Rule Pack Version"] <span class="text-danger">*</span></label>
                                <select asp-for="Input.RulePackVersion" class="form-control select2">
                                    <option value="1.0.0">v1.0.0 (@_localizer["Current"])</option>
                                    <option value="1.1.0">v1.1.0 (@_localizer["Beta"])</option>
                                </select>
                                <span asp-validation-for="Input.RulePackVersion" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-12 mb-3">
                                <label class="form-label" asp-for="Input.Description">@_localizer["Description"] (@_localizer["Optional"])</label>
                                <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="@_localizer["Describe the purpose of this run..."]"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Simulation Mode Toggle -->
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-simulation-toggle" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-flask mr-2"></i>
                        @_localizer["Simulation Mode"]
                    </h2>
                    <div class="panel-toolbar">
                        <span class="badge badge-info mr-2" id="simBadge" style="display:none;">@_localizer["No data will be persisted"]</span>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="chkSimulationMode">
                            <label class="custom-control-label" for="chkSimulationMode">@_localizer["Enable"]</label>
                        </div>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content py-2">
                        <small class="text-muted">
                            <i class="@(Settings.Theme.IconPrefix) fa-info-circle mr-1"></i>
                            @_localizer["Run candidate rules against historical data to compare match results with your current active rules. No records will be created or modified."]
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rule Selection Panel (hidden by default, shown when simulation mode is on) -->
    <div class="row" id="simulationPanels" style="display:none;">
        <div class="col-xl-8">
            <div id="panel-rules" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-list-check mr-2"></i>
                        @_localizer["Candidate Rules"]
                    </h2>
                    <div class="panel-toolbar">
                        <span class="badge badge-primary" id="selectedRuleCount">0 @_localizer["selected"]</span>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <div class="p-2 border-bottom bg-fusion-50">
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-default" onclick="selectRules('all')">@_localizer["All"]</button>
                                <button type="button" class="btn btn-outline-default" onclick="selectRules('none')">@_localizer["None"]</button>
                                <button type="button" class="btn btn-outline-success" onclick="selectRules('active')">@_localizer["Active Only"]</button>
                                <button type="button" class="btn btn-outline-warning" onclick="selectRules('inactive')">@_localizer["Inactive Only"]</button>
                            </div>
                        </div>
                        <div style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-sm table-hover m-0">
                                <thead>
                                    <tr>
                                        <th style="width:40px;"></th>
                                        <th>@_localizer["Rule"]</th>
                                        <th>@_localizer["Type"]</th>
                                        <th class="text-center">@_localizer["Priority"]</th>
                                        <th class="text-center">@_localizer["Status"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rule in Model.AllRules)
                                    {
                                        var typeBadge = rule.RuleType switch
                                        {
                                            Domain.Enums.RuleType.Equality => "badge-primary",
                                            Domain.Enums.RuleType.Composite => "badge-info",
                                            Domain.Enums.RuleType.ToleranceWindow => "badge-warning",
                                            Domain.Enums.RuleType.Fuzzy => "badge-success",
                                            _ => "badge-secondary"
                                        };
                                        <tr>
                                            <td class="text-center">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input rule-checkbox"
                                                           id="rule_@rule.Id" value="@rule.Id"
                                                           data-active="@rule.IsActive.ToString().ToLower()"
                                                           onchange="updateRuleCount()">
                                                    <label class="custom-control-label" for="rule_@rule.Id"></label>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>@rule.RuleName</strong>
                                                @if (!string.IsNullOrEmpty(rule.Description))
                                                {
                                                    <br /><small class="text-muted">@rule.Description</small>
                                                }
                                            </td>
                                            <td><span class="badge @typeBadge">@rule.RuleType</span></td>
                                            <td class="text-center">@rule.Priority</td>
                                            <td class="text-center">
                                                @if (rule.IsActive)
                                                {
                                                    <span class="badge badge-success">@_localizer["Active"]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@_localizer["Inactive"]</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div id="panel-threshold" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-sliders-h mr-2"></i>
                        @_localizer["False Positive Threshold"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <p class="text-muted small mb-3">
                            @_localizer["Matches with a confidence score below this threshold will be flagged as potential false positives."]
                        </p>
                        <div class="d-flex align-items-center mb-2">
                            <input type="range" class="custom-range flex-grow-1" id="fpThreshold"
                                   min="0.1" max="1.0" step="0.05" value="0.7"
                                   oninput="document.getElementById('fpValue').textContent = parseFloat(this.value).toFixed(2)">
                            <span class="badge badge-info ml-3 px-3 py-2" id="fpValue" style="min-width:50px;">0.70</span>
                        </div>
                        <div class="d-flex justify-content-between text-muted small">
                            <span>0.10 (@_localizer["Strict"])</span>
                            <span>1.00 (@_localizer["Lenient"])</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div id="panel-datasource" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-database mr-2"></i>
                        @_localizer["Data Source Selection"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" asp-for="Input.IncludeInternalTransactions" class="custom-control-input" id="chkInternal">
                            <label class="custom-control-label" for="chkInternal">@_localizer["Include Internal Transactions"]</label>
                        </div>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" asp-for="Input.IncludePspTransactions" class="custom-control-input" id="chkPsp">
                            <label class="custom-control-label" for="chkPsp">@_localizer["Include PSP Transactions"]</label>
                        </div>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" asp-for="Input.IncludeBankTransactions" class="custom-control-input" id="chkBank">
                            <label class="custom-control-label" for="chkBank">@_localizer["Include Bank Transactions"]</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div id="panel-daterange" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-calendar-alt mr-2"></i>
                        @_localizer["Date Range"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.StartDate">@_localizer["Start Date"]</label>
                                <input type="date" asp-for="Input.StartDate" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Input.EndDate">@_localizer["End Date"]</label>
                                <input type="date" asp-for="Input.EndDate" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div id="panel-advanced" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-sliders-h mr-2"></i>
                        @_localizer["Advanced Options"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" asp-for="Input.StopAtFirstMatch" class="custom-control-input" id="chkStopFirst">
                                    <label class="custom-control-label" for="chkStopFirst">@_localizer["Stop at First Match"]</label>
                                    <small class="form-text text-muted">@_localizer["Faster but less comprehensive"]</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" asp-for="Input.GenerateEvidencePack" class="custom-control-input" id="chkEvidence">
                                    <label class="custom-control-label" for="chkEvidence">@_localizer["Generate Evidence Pack"]</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" asp-for="Input.CreateCasesForExceptions" class="custom-control-input" id="chkCases">
                                    <label class="custom-control-label" for="chkCases">@_localizer["Auto-create Cases for Exceptions"]</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pre-Run Checklist -->
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-checklist" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-clipboard-check mr-2"></i>
                        @_localizer["Pre-Run Checklist"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-check-circle text-success mr-2"></i>
                                    <span>@_localizer["Matching rules configured"]</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-check-circle text-success mr-2"></i>
                                    <span>@_localizer["Field mappings defined"]</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-check-circle text-success mr-2"></i>
                                    <span>@_localizer["Status mappings configured"]</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-info-circle text-info mr-2"></i>
                                    <span>@_localizer["Data files uploaded (optional)"]</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-info-circle text-info mr-2"></i>
                                    <span>@_localizer["Notification settings (optional)"]</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="@(Settings.Theme.IconPrefix) fa-info-circle text-info mr-2"></i>
                                    <span>@_localizer["Fee contracts defined (optional)"]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="@(Settings.Theme.IconPrefix) fa-exclamation-triangle mr-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="btn-group float-right" role="group">
                <button type="submit" id="btnStartRun" class="btn btn-primary btn-lg waves-effect waves-themed">
                    <i class="@(Settings.Theme.IconPrefix) fa-rocket mr-1"></i>
                    @_localizer["Start Run"]
                </button>
                <button type="button" id="btnRunSimulation" class="btn btn-info btn-lg waves-effect waves-themed" style="display:none;" onclick="runSimulation()">
                    <i class="@(Settings.Theme.IconPrefix) fa-flask mr-1"></i>
                    @_localizer["Run Simulation"]
                </button>
                <a asp-page="Index" class="btn btn-secondary waves-effect waves-themed">
                    <i class="@(Settings.Theme.IconPrefix) fa-times mr-1"></i>
                    @_localizer["Cancel"]
                </a>
            </div>
        </div>
    </div>
</form>

<!-- Simulation Results (hidden until simulation completes) -->
<div id="simulationResults" style="display:none;" class="mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="fw-500">
                <i class="@(Settings.Theme.IconPrefix) fa-chart-bar mr-2"></i>
                @_localizer["Simulation Results"]
                <small class="text-muted ml-2" id="simDuration"></small>
            </h2>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row">
        <div class="col-xl-3 col-lg-6">
            <div class="p-3 bg-primary-50 rounded mb-3">
                <div class="d-flex align-items-center">
                    <div class="icon-stack display-4 flex-shrink-0 mr-3">
                        <i class="@(Settings.Theme.IconPrefix) fa-check-circle text-primary"></i>
                    </div>
                    <div>
                        <span class="d-block text-muted small">@_localizer["Baseline Matched"]</span>
                        <span class="h3 font-weight-bold" id="cardBaselineMatched">-</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="p-3 bg-info-50 rounded mb-3">
                <div class="d-flex align-items-center">
                    <div class="icon-stack display-4 flex-shrink-0 mr-3">
                        <i class="@(Settings.Theme.IconPrefix) fa-flask text-info"></i>
                    </div>
                    <div>
                        <span class="d-block text-muted small">@_localizer["Candidate Matched"]</span>
                        <span class="h3 font-weight-bold" id="cardCandidateMatched">-</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="p-3 rounded mb-3" id="cardLiftBg">
                <div class="d-flex align-items-center">
                    <div class="icon-stack display-4 flex-shrink-0 mr-3">
                        <i class="@(Settings.Theme.IconPrefix) fa-arrow-up" id="cardLiftIcon"></i>
                    </div>
                    <div>
                        <span class="d-block text-muted small">@_localizer["Match Lift"]</span>
                        <span class="h3 font-weight-bold" id="cardLift">-</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6">
            <div class="p-3 bg-warning-50 rounded mb-3">
                <div class="d-flex align-items-center">
                    <div class="icon-stack display-4 flex-shrink-0 mr-3">
                        <i class="@(Settings.Theme.IconPrefix) fa-exclamation-triangle text-warning"></i>
                    </div>
                    <div>
                        <span class="d-block text-muted small">@_localizer["False Positives"]</span>
                        <span class="h3 font-weight-bold" id="cardFalsePositives">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart -->
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-chart" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-chart-bar mr-2"></i>
                        @_localizer["Baseline vs Candidate Comparison"]
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div style="height: 350px;">
                            <canvas id="simChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- New / Lost Matches -->
    <div class="row">
        <div class="col-xl-6">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-plus-circle text-success mr-2"></i>
                        @_localizer["New Matches (Gained)"]
                        <span class="badge badge-success ml-2" id="newMatchCount">0</span>
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-sm table-striped m-0">
                                <thead>
                                    <tr>
                                        <th>@_localizer["Internal Tx"]</th>
                                        <th>@_localizer["External Tx"]</th>
                                        <th>@_localizer["Rule"]</th>
                                        <th class="text-right">@_localizer["Score"]</th>
                                    </tr>
                                </thead>
                                <tbody id="newMatchesBody">
                                    <tr><td colspan="4" class="text-center text-muted py-3">@_localizer["No data"]</td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-minus-circle text-danger mr-2"></i>
                        @_localizer["Lost Matches"]
                        <span class="badge badge-danger ml-2" id="lostMatchCount">0</span>
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-sm table-striped m-0">
                                <thead>
                                    <tr>
                                        <th>@_localizer["Internal Tx"]</th>
                                        <th>@_localizer["External Tx"]</th>
                                        <th>@_localizer["Rule"]</th>
                                        <th class="text-right">@_localizer["Score"]</th>
                                    </tr>
                                </thead>
                                <tbody id="lostMatchesBody">
                                    <tr><td colspan="4" class="text-center text-muted py-3">@_localizer["No data"]</td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- False Positives: Unverified + Low Confidence -->
    <div class="row">
        <div class="col-xl-6">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-question-circle text-warning mr-2"></i>
                        @_localizer["Unverified Matches"]
                        <span class="badge badge-warning ml-2" id="unverifiedCount">0</span>
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-sm table-striped m-0">
                                <thead>
                                    <tr>
                                        <th>@_localizer["Internal Tx"]</th>
                                        <th>@_localizer["External Tx"]</th>
                                        <th>@_localizer["Rule"]</th>
                                        <th class="text-right">@_localizer["Score"]</th>
                                    </tr>
                                </thead>
                                <tbody id="unverifiedBody">
                                    <tr><td colspan="4" class="text-center text-muted py-3">@_localizer["No data"]</td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="panel">
                <div class="panel-hdr">
                    <h2>
                        <i class="@(Settings.Theme.IconPrefix) fa-exclamation-circle text-danger mr-2"></i>
                        @_localizer["Low Confidence Matches"]
                        <span class="badge badge-danger ml-2" id="lowConfidenceCount">0</span>
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-sm table-striped m-0">
                                <thead>
                                    <tr>
                                        <th>@_localizer["Internal Tx"]</th>
                                        <th>@_localizer["External Tx"]</th>
                                        <th>@_localizer["Rule"]</th>
                                        <th class="text-right">@_localizer["Score"]</th>
                                        <th class="text-right">@_localizer["Threshold"]</th>
                                    </tr>
                                </thead>
                                <tbody id="lowConfidenceBody">
                                    <tr><td colspan="5" class="text-center text-muted py-3">@_localizer["No data"]</td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        var simulateUrl = '@Html.Raw(simulateUrl)';
        var simChart = null;

        $(function () {
            'use strict';

            // Form validation
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Simulation mode toggle
            $('#chkSimulationMode').on('change', function () {
                var isSimMode = $(this).is(':checked');
                $('#simulationPanels').toggle(isSimMode);
                $('#simBadge').toggle(isSimMode);
                $('#btnStartRun').toggle(!isSimMode);
                $('#btnRunSimulation').toggle(isSimMode);
                if (!isSimMode) {
                    $('#simulationResults').hide();
                }
            });
        });

        function selectRules(mode) {
            var checkboxes = document.querySelectorAll('.rule-checkbox');
            checkboxes.forEach(function (cb) {
                switch (mode) {
                    case 'all':
                        cb.checked = true;
                        break;
                    case 'none':
                        cb.checked = false;
                        break;
                    case 'active':
                        cb.checked = cb.dataset.active === 'true';
                        break;
                    case 'inactive':
                        cb.checked = cb.dataset.active === 'false';
                        break;
                }
            });
            updateRuleCount();
        }

        function updateRuleCount() {
            var count = document.querySelectorAll('.rule-checkbox:checked').length;
            document.getElementById('selectedRuleCount').textContent = count + ' selected';
        }

        function runSimulation() {
            var selectedRuleIds = [];
            document.querySelectorAll('.rule-checkbox:checked').forEach(function (cb) {
                selectedRuleIds.push(parseInt(cb.value));
            });

            if (selectedRuleIds.length === 0) {
                toastr.warning('Please select at least one candidate rule.');
                return;
            }

            var payload = {
                startDate: document.getElementById('Input_StartDate').value || null,
                endDate: document.getElementById('Input_EndDate').value || null,
                candidateRuleIds: selectedRuleIds,
                falsePositiveThreshold: parseFloat(document.getElementById('fpThreshold').value),
                stopAtFirstMatch: document.getElementById('chkStopFirst').checked
            };

            var btn = document.getElementById('btnRunSimulation');
            btn.disabled = true;
            btn.innerHTML = '<i class="@(Settings.Theme.IconPrefix) fa-spinner fa-spin mr-1"></i> Running...';

            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            axios.post(simulateUrl, payload, {
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                }
            })
            .then(function (response) {
                var res = response.data;
                if (res.succeeded) {
                    toastr.success(res.message || 'Simulation completed.');
                    renderSimulationResults(res.data);
                } else {
                    toastr.error(res.message || 'Simulation failed.');
                }
            })
            .catch(function (error) {
                toastr.error('Simulation request failed: ' + (error.response?.data?.message || error.message));
            })
            .finally(function () {
                btn.disabled = false;
                btn.innerHTML = '<i class="@(Settings.Theme.IconPrefix) fa-flask mr-1"></i> Run Simulation';
            });
        }

        function renderSimulationResults(data) {
            $('#simulationResults').show();

            // Duration
            var durationSec = data.duration ? (typeof data.duration === 'string'
                ? parseTimeSpan(data.duration) : data.duration) : 0;
            $('#simDuration').text('Completed in ' + durationSec.toFixed(1) + 's');

            // Summary cards
            $('#cardBaselineMatched').text(data.baseline.matchedCount);
            $('#cardCandidateMatched').text(data.candidate.matchedCount);

            var liftVal = data.lift.matchedDelta;
            var liftText = (liftVal > 0 ? '+' : '') + liftVal;
            var liftPct = data.lift.matchPercentageDelta;
            $('#cardLift').text(liftText + ' (' + (liftPct > 0 ? '+' : '') + liftPct.toFixed(1) + '%)');
            if (liftVal > 0) {
                $('#cardLiftBg').removeClass('bg-danger-50').addClass('bg-success-50');
                $('#cardLiftIcon').removeClass('text-danger fa-arrow-down').addClass('text-success fa-arrow-up');
            } else if (liftVal < 0) {
                $('#cardLiftBg').removeClass('bg-success-50').addClass('bg-danger-50');
                $('#cardLiftIcon').removeClass('text-success fa-arrow-up').addClass('text-danger fa-arrow-down');
            } else {
                $('#cardLiftBg').removeClass('bg-success-50 bg-danger-50').addClass('bg-fusion-50');
                $('#cardLiftIcon').removeClass('text-success text-danger fa-arrow-up fa-arrow-down').addClass('text-muted fa-equals');
            }

            var fpTotal = (data.falsePositives.unverifiedCount || 0) + (data.falsePositives.lowConfidenceCount || 0);
            $('#cardFalsePositives').text(fpTotal);

            // Chart
            renderChart(data);

            // Tables
            renderMatchTable('newMatchesBody', data.lift.newMatches, 'newMatchCount');
            renderMatchTable('lostMatchesBody', data.lift.lostMatches, 'lostMatchCount');
            renderMatchTable('unverifiedBody', data.falsePositives.unverifiedMatches, 'unverifiedCount');
            renderLowConfidenceTable(data.falsePositives.lowConfidenceMatches, data.falsePositives.falsePositiveThreshold);

            // Scroll to results
            document.getElementById('simulationResults').scrollIntoView({ behavior: 'smooth' });
        }

        function parseTimeSpan(ts) {
            // Handle .NET TimeSpan serialized as "HH:MM:SS.fff" or "d.HH:MM:SS.fff"
            if (!ts) return 0;
            var parts = ts.split(':');
            if (parts.length >= 3) {
                var hours = parseFloat(parts[0]) || 0;
                var mins = parseFloat(parts[1]) || 0;
                var secs = parseFloat(parts[2]) || 0;
                return hours * 3600 + mins * 60 + secs;
            }
            return parseFloat(ts) || 0;
        }

        function renderChart(data) {
            var ctx = document.getElementById('simChart').getContext('2d');
            if (simChart) simChart.destroy();

            simChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Matched', 'Partial Match', 'Unmatched Internal', 'Unmatched External'],
                    datasets: [
                        {
                            label: 'Baseline',
                            data: [
                                data.baseline.matchedCount,
                                data.baseline.partialMatchCount,
                                data.baseline.internalUnmatchedCount,
                                data.baseline.externalUnmatchedCount
                            ],
                            backgroundColor: 'rgba(54, 162, 235, 0.7)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Candidate',
                            data: [
                                data.candidate.matchedCount,
                                data.candidate.partialMatchCount,
                                data.candidate.internalUnmatchedCount,
                                data.candidate.externalUnmatchedCount
                            ],
                            backgroundColor: 'rgba(75, 192, 192, 0.7)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' }
                    },
                    scales: {
                        y: { beginAtZero: true, ticks: { precision: 0 } }
                    }
                }
            });
        }

        function renderMatchTable(tbodyId, matches, countBadgeId) {
            var tbody = document.getElementById(tbodyId);
            var count = matches ? matches.length : 0;
            document.getElementById(countBadgeId).textContent = count;

            if (!matches || matches.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted py-3">No data</td></tr>';
                return;
            }

            var html = '';
            matches.forEach(function (m) {
                html += '<tr>'
                    + '<td><code>' + escapeHtml(m.internalTxId || '-') + '</code></td>'
                    + '<td><code>' + escapeHtml(m.externalTxId || '-') + '</code></td>'
                    + '<td><span class="badge badge-secondary">' + escapeHtml(m.ruleApplied || '-') + '</span></td>'
                    + '<td class="text-right">' + (m.matchScore != null ? m.matchScore.toFixed(2) : '-') + '</td>'
                    + '</tr>';
            });
            tbody.innerHTML = html;
        }

        function renderLowConfidenceTable(matches, threshold) {
            var tbody = document.getElementById('lowConfidenceBody');
            var count = matches ? matches.length : 0;
            document.getElementById('lowConfidenceCount').textContent = count;

            if (!matches || matches.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted py-3">No data</td></tr>';
                return;
            }

            var html = '';
            matches.forEach(function (m) {
                html += '<tr>'
                    + '<td><code>' + escapeHtml(m.internalTxId || '-') + '</code></td>'
                    + '<td><code>' + escapeHtml(m.externalTxId || '-') + '</code></td>'
                    + '<td><span class="badge badge-secondary">' + escapeHtml(m.ruleApplied || '-') + '</span></td>'
                    + '<td class="text-right text-danger">' + (m.matchScore != null ? m.matchScore.toFixed(2) : '-') + '</td>'
                    + '<td class="text-right">' + (threshold != null ? threshold.toFixed(2) : '-') + '</td>'
                    + '</tr>';
            });
            tbody.innerHTML = html;
        }

        function escapeHtml(str) {
            if (!str) return '';
            var div = document.createElement('div');
            div.appendChild(document.createTextNode(str));
            return div.innerHTML;
        }
    </script>
}
